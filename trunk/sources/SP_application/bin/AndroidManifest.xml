<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sp_application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.example.sp_application.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.sp_application.TasksList_GEO"
            android:label="@string/title_activity_tasks_list__geo" >
        </activity>
        <activity
            android:name="com.example.sp_application.TaskProjectActivity"
            android:label="@string/title_activity_task_project" >
        </activity>
        <activity
            android:name="com.example.sp_application.TaskProcess"
            android:label="@string/title_activity_task_process" >
        </activity>
        <activity
            android:name="com.example.sp_application.Loading"
            android:label="@string/title_activity_loading" 
     		android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>